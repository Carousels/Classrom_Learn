@model BlogArticle
@{
    ViewBag.Title = "Edit";

}

<h2>编辑</h2>

@using (Html.BeginForm("ArticleSave", "Blog"))
{
    <input type = "hidden" value = "@Model.Id" name = "Id" />
    <table class="table table-bordered">
        <tr>
            <td>标题：</td>
            <td>
                @* @Html.TextBox("Subject")*@
                @Html.TextBoxFor(o => o.Subject)
                @Html.ValidationMessageFor(o => o.Subject)
            </td>
        </tr>
        <tr>
            <td>内容</td>
            <td>
                @* @Html.TextArea("Body", new { style = "width:600px; max-width:1000px;" }) *@
                @Html.TextAreaFor(o => o.Body, new { style = "width:600px; max-width:1000px;" })
                @Html.ValidationMessageFor(o => o.Body)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <button type = "submit" class="btn btn-primary">保存</button>
                <button type = "reset" class="btn btn-warning">取消</button>
            </td>
        </tr>

    </table>
}

